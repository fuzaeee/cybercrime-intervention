# Save to JSON file
with open('cybercrime_knowledge_comprehensive.json', 'w', encoding='utf-8') as f:
    json.dump(knowledge_base, f, indent=2, ensure_ascii=False)

print("Comprehensive Cybercrime Knowledge Base created successfully!")
print(f"Total crime categories covered: {len(knowledge_base) - 1}")  # -1 for metadata
print("\nCategories included:")
for category in knowledge_base.keys():
    if category != "metadata":
        print(f"- {category.replace('_', ' ').title()}")

print(f"\nFile size: {len(json.dumps(knowledge_base, indent=2))} characters")
